---
source: packages/core/src/commands/download/context_step.rs
expression: sql
---
SELECT
  "episodes"."primary_key",
  "episodes"."title",
  "episodes"."file_sub_path",
  "episodes"."image_sub_path",
  "episodes"."source_url",
  "episodes"."source_content_type",
  "episodes"."published_at",
  "episodes"."image",
  "episodes"."episode",
  "episodes"."season"
FROM
  "episodes"
WHERE
  "episodes"."primary_key" = 2
  AND EXISTS (
    SELECT
      1
    FROM
      "podcasts"
    WHERE
      "podcasts"."primary_key" = 1
      AND "episodes"."podcast_key" = "podcasts"."primary_key"
  )
