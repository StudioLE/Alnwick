source: packages/core/src/api/index/index_api.rs
expression: sql
---
SELECT
  "podcasts"."primary_key",
  "podcasts"."slug",
  "podcasts"."title",
  "podcasts"."image",
  COUNT("episodes"."primary_key") AS "episodes_count"
FROM
  "podcasts"
  LEFT JOIN "episodes" ON "podcasts"."primary_key" = "episodes"."podcast_key"
GROUP BY
  "podcasts"."primary_key"
ORDER BY
  "podcasts"."title" ASC
